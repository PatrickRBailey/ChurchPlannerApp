@model List<ChurchPlannerApp.Models.Song>
@{
    ViewBag.Title = "Songs";
}

<div class="container">
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
            <a href="@Url.Action("AddSong", "Music")" class="btn btn-success center-block" style="margin-top:30px;">
                Add a Song
            </a>
                @foreach (var m in Model)
            {
                    <a href="@m.Url" target="new">@m.Title</a>
                    <a href="@Url.Action("RemoveSong", "Music",new {id=m.SongID})" class="btn btn-danger center-block" style="margin-top:30px;">
                        Delete
                    </a>
                    <a href="@Url.Action("EditSong", "Music",new {id=m.SongID})" class="btn btn-success center-block" style="margin-top:30px;">
                        Edit
                    </a>
                    <br /> 

                }
        </div>
    </div>
</div>
