@model List<ChurchPlannerApp.Models.Song>
@{
    ViewBag.Title = "Songs";
}
@if (ViewBag.role != "Musician")
{
            <a type="button" class="btn btn-default btn-success pull-right"
                    href="@Url.Action("AddSong", "Music")" aria-label="Right Align">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"> Add</span>
            </a><br /><br />
}
            @if (Model.Count > 0)
            {
            <div id="test-list">
                <input type="text" class="fuzzy-search"  placeholder="Search for..." />
                <ul class="list">
                    @foreach (var m in Model)
                    {
                        <li style="list-style-type:none;">
                            <div class="center-block songs">
                                <div class="btn-group" role="group">
                                    <a type="button" class="btn btn-primary btn-xs"
                                            href="@Url.Action("EditSong", "Music", new { id = m.SongID })" aria-label="Right Align">
                                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                    </a>
                                    <a type="button" class="btn btn-danger btn-xs"
                                            href="@Url.Action("RemoveSong", "Music", new { id = m.SongID })" aria-label="Right Align">
                                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                    </a>
                                </div>&nbsp;&nbsp;&nbsp;
                                <a href="@m.Url" target="new" class="name">@m.Title</a>

                            </div>
                        </li>


                    }
                </ul>
            </div>
            }
<script>
    var monkeyList = new List('test-list', {
        valueNames: ['name']
    });
</script>
