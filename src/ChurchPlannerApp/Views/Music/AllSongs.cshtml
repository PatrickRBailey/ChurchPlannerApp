@model List<ChurchPlannerApp.Models.Song>
@{
    ViewBag.Title = "Songs";
}

<div class="container">
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
            <button type="button" class="btn btn-default btn-success pull-right"
                    href="@Url.Action("AddSong", "Music")" aria-label="Right Align">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"> Add</span>
            </button><br /><br />

            <div id="test-list">
                <input type="text" class="fuzzy-search"  placeholder="Search for..." />
                <ul class="list">
                    @foreach (var m in Model)
            {
                        <li style="list-style-type:none;">
                            <div class="center-block songs">
                                <div class="btn-group" role="group">
                                    <button type="button" class="btn btn-primary btn-xs" data-toggle="collapse"
                                            href="@Url.Action("EditSong", "Music",new {id=m.SongID})" aria-label="Right Align">
                                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                    </button>
                                    <button type="button" class="btn btn-danger btn-xs" data-toggle="collapse"
                                            href="@Url.Action("RemoveSong", "Music",new {id=m.SongID})" aria-label="Right Align">
                                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                    </button>
                                </div>&nbsp;&nbsp;&nbsp;
                                <a href="@m.Url" target="new" class="name">@m.Title</a>

                            </div>
                        </li>


                    }
                </ul>
            </div>
        </div>
    </div>
</div>
<script>
    var monkeyList = new List('test-list', {
        valueNames: ['name']
    });
</script>
