﻿@model ChurchPlannerApp.Models.Song
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewBag.Title = "Edit Song";
}

<h1 class="text-center">Edit Song</h1>
<form asp-controller="Music" asp-action="EditSong" method="post">
    <div class="form-group center-block">
        <input asp-for="SongID" type="hidden" />

        <label asp-for="Title">Song Title:</label>
        <input asp-for="Title" class="form-control" /><br />

        <label asp-for="Url">Song Url:</label>
        <input asp-for="Url" class="form-control" /><br />


        <button type="submit" class="btn btn-primary pull-right">Save</button>
    </div>
</form>