<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/list.js/1.5.0/list.min.js"></script>
    <style>
        body{ 

        }
        .panel-heading{
            padding: 10px;
            height: 120px;
        }

        .songs {
            font-size:large;
            border:1px inset #eeeeee;
            padding:30px;
            margin:10px;
            margin-bottom: 20px;
        }

        .messages {
            margin-bottom:20px;
            width: 100%;
            background-color: #fff;
            position: relative;
            float: left;
            border: solid #d7ccc8 .5px;
            padding: 10px;
}
        .container{
            margin-top:50px;
        }
    </style>
</head>
<body>
    @*TODO: Make Interactive Navbar*@
    <ul class="nav nav-tabs">
        <li role="presentation" class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">@Html.ActionLink("Home", "Index", "Home")</li>
        <li role="presentation" class="@(ViewContext.RouteData.Values["Action"].ToString() == "AllMessages" ? "active" : "")">@Html.ActionLink("Forum", "AllMessages", "Forum")</li>
        <li role="presentation" class="@(ViewContext.RouteData.Values["Action"].ToString() == "AllSongs" ? "active" : "")">@Html.ActionLink("Music", "AllSongs", "Music")</li>
        <li role="presentation" class="@(ViewContext.RouteData.Values["Action"].ToString() == "AllMembers" ? "active" : "")">@Html.ActionLink("Players", "AllMembers", "Profile")</li>
        <li role="presentation" class="@(ViewContext.RouteData.Values["Action"].ToString() == "AllRequests" ? "active" : "")">@Html.ActionLink("Service Requests", "AllRequests", "Request")</li>
        <li role="presentation" class="@(ViewContext.RouteData.Values["Action"].ToString() == "AllServices" ? "active" : "")">@Html.ActionLink("Service Plans", "AllServices", "ServicePlan")</li>


    </ul>
    <div>
        @RenderBody()
    </div>
</body>
</html>
