<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/list.js/1.5.0/list.min.js"></script>
    <style>
        body {
            background-color: #f5f5f5;
        }
        .addSong{
            width: 80%;
        }

        .addMemberBtn{
            margin-right:170px;
        }

        .form-control {
            width: 100%;
        }

        .panel-heading {
            padding: 10px;
            height: 120px;
        }

        .requestPanel {
            height: 200px;
        }

        .songs {
            font-size: large;
            border: 1px inset #eeeeee;
            padding: 30px;
            margin: 10px;
            margin-bottom: 20px;
        }

        .messages {
            margin-bottom: 20px;
            width: 100%;
            background-color: #fff;
            position: relative;
            float: left;
            border: solid #d7ccc8 .5px;
            padding: 10px;
            margin: 0px;
            margin-top: 30px;
        }

        .comments {
            width: 100%;
            height: 100px;
            background-color: #e3f2fd;
            position: relative;
            float: left;
            border: solid #d7ccc8 .5px;
            padding: 10px;
            
        }
        .container {
            margin-top: 50px;
        }
    </style>
</head>
<body>
    <ul class="nav nav-tabs">
        <li role="presentation" class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">@Html.ActionLink("Home", "Index", "Home")</li>
        <li role="presentation" class="@(ViewContext.RouteData.Values["Action"].ToString() == "AllMessages" ? "active" : "")">@Html.ActionLink("Forum", "AllMessages", "Forum")</li>
        <li role="presentation" class="@(ViewContext.RouteData.Values["Action"].ToString() == "AllSongs" ? "active" : "")">@Html.ActionLink("Music", "AllSongs", "Music")</li>
        <li role="presentation" class="@(ViewContext.RouteData.Values["Action"].ToString() == "AllMembers" ? "active" : "")">@Html.ActionLink("Players", "AllMembers", "Profile")</li>
        <li role="presentation" class="@(ViewContext.RouteData.Values["Action"].ToString() == "AllRequests" ? "active" : "")">@Html.ActionLink("Service Requests", "AllRequests", "Request")</li>
        <li role="presentation" class="@(ViewContext.RouteData.Values["Action"].ToString() == "AllServices" ? "active" : "")">@Html.ActionLink("Service Plans", "AllServices", "ServicePlan")</li>
        <li role="presentation">@Html.ActionLink("Logout", "Logout", "Account")</li>

    </ul>
    <div>
        <div class="container">
            <div class="row">
                <div class="col-sm-8 col-sm-offset-2">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
</body>
</html>
