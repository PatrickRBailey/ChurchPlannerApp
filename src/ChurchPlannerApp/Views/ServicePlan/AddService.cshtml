﻿@model ChurchPlannerApp.Models.Service
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewBag.Title = "New Service";
}

<h1 class="text-center">Create a New Service</h1>
<form asp-controller="ServicePlan" asp-action="AddService" method="post">
    <div class="form-group center-block">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input asp-for="ServiceID" type="hidden" />

        <label asp-for="Title">Title:</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
        <br />

        <label asp-for="ServiceDate">Service Date:</label>
        <input asp-for="ServiceDate" class="form-control" />
        <span asp-validation-for="ServiceDate" class="text-danger"></span>
        <br />

        <label asp-for="PracticeDate">Practice Date:</label>
        <input asp-for="PracticeDate" class="form-control" />
        <span asp-validation-for="PracticeDate" class="text-danger"></span>
        <br />

  



        <button type="submit" class="btn btn-primary pull-right">Create Service</button>
    </div>
</form>