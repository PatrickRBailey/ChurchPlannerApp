﻿@model ChurchPlannerApp.Models.Profile
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewBag.Title = "Edit Profile";
}

<h1 class="text-center">Edit Profile</h1>
<form asp-controller="Profile" asp-action="EditProfile" method="post">
    <div class="form-group center-block">
        <input asp-for="ProfileID" type="hidden" />

        <label asp-for="FName">First Name:</label>
        <input asp-for="FName" class="form-control" /><br />

        <label asp-for="LName">Last Name:</label>
        <input asp-for="LName" class="form-control" /><br />

        <label asp-for="UserName">Username:</label>
        <input asp-for="UserName" class="form-control" /><br />

        <label asp-for="Email">Email:</label>
        <input asp-for="Email" class="form-control" /><br />

        <label asp-for="PhoneNum">Phone Number:</label>
        <input asp-for="PhoneNum" class="form-control" /><br />


        <button type="submit" class="btn btn-primary pull-right">Save</button>
    </div>
</form>