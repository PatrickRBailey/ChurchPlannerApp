﻿@model ChurchPlannerApp.Models.Profile
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewBag.Title = "New Profile";
}

<h1 class="text-center">Create a New Profile</h1>
<form asp-controller="Profile" asp-action="AddProfile" method="post">
    <div class="form-group center-block">
        <input asp-for="ProfileID" type="hidden" />

        <label asp-for="FName">First Name:</label>
        <input asp-for="FName" class="form-control" /><br />

        <label asp-for="LName">Last Name:</label>
        <input asp-for="LName" class="form-control" /><br />

        <label asp-for="UserName">Username:</label>
        <input asp-for="UserName" class="form-control" /><br />

        <label asp-for="Email">Email:</label>
        <input asp-for="Email" class="form-control" /><br />

        <label asp-for="PhoneNum">Phone Number:</label>
        <input asp-for="PhoneNum" class="form-control" /><br />

        @*
            TODO: Convert this into a button that opens a form to add instruments to the profile

            <a href="@Url.Action("AddProfile", "Profile")" class="btn btn-success center-block" style="margin-top:30px;">
            Create a Profile
        </a>*@
        

        <button type="submit" class="btn btn-primary pull-right">Create Profile</button>
    </div>
</form>